<!DOCTYPE html>
<html lang="en">

<head>
  <title>Register</title>

  <link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <script type="text/javascript" src="/scripts/map.js"></script>
</head>

<body>
  <%- include('partials/_header') %>
  <main style="margin: 1em;">
    <h3>Register account</h3>
    <form class="form" action="/register" method="POST">

      <div class="form-group">
        <label for="longURL">Email address:</label>
        <input class="form-control" type="email" name="email" placeholder="user@email.com" style="width: 300px;">
      </div>
      <div class="form-group">
        <label for="longURL">Password:</label>
        <input class="form-control" type="password" name="password" style="width: 300px;">
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-outline-primary">Submit</button>
      </div>
    </form>
  </main>
</body>

</html>
